<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="220.0" prefWidth="250.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Login">
      <font>
         <Font name="Calibri" size="19.0" />
      </font>
   </Label>
   <Label text="To Enter: username: user1 password: pass1 ">
      <font>
         <Font name="System Italic" size="11.0" />
      </font>
   </Label>
   <TextField fx:id="usernameTF" minHeight="30.0" prefHeight="30.0" promptText="Username" />
   <PasswordField fx:id="passwordPF" minHeight="30.0" prefHeight="50.0" promptText="Password" />
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
          <Button fx:id="loginBtn" minWidth="100.0" onAction="#onLoginClick" prefHeight="30.0" text="Login" />
      
                <Label fx:id="loginStatus" prefHeight="30.0" textFill="#2100f5">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
         </Label>
      </children>
   </VBox>
</VBox>
